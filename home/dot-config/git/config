	gpgsign = true
	verbose = true

[core]
	autocrlf       = false
	compression    = 9
	editor         = vim
	excludesFile   = ~/.config/git/.gitignore
	fsmonitor      = true
    hooksPath      = ~/.config/git/hooks
	ignorecase     = false
	untrackedcache = true
